{
    "name": "netsh-rule",
    "version": "1.0.5",
    "author": "Max Zakharzhevskiy",
    "description": "Utility to generate a batch file to manage inbound and outbound Windows firewall connections for a single exe file or all exe files in folder",
    "license": "MIT",
    "engines": {
        "node": ">=10.16.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxzz/netsh-rule.git"
    },
    "bugs": {
        "url": "https://github.com/maxzz/netsh-rule/issues"
    },
    "keywords": [
        "generate",
        "netsh",
        "batch",
        "poswershell",
        "javascript",
        "typescript"
    ],
    "main": "dist/cli.js",
    "bin": "dist/cli.js",
    "files": [
        "dist/**/*"
    ],
    "dependencies": {
        "chalk": "^4.1.0",
        "minimist": "1.2.8"
    },
    "devDependencies": {
        "@types/node": "24.3.0",
        "ts-node": "^10.9.2"
    },
    "scripts": {
        "dev": "tsc -w",
        "build": "rm -rf dist && tsc",
        "prepublish": "pnpm build"
    }
