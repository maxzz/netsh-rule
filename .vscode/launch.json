        {
            "name": "TS Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
            "args": [
                "${workspaceFolder}/src/index.ts",
                //"C:/Program Files/nodejs"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "JS Launch",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
